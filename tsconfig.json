{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "es2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "incremental": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "tsconfig.json",
    ".eslintrc.js",
    "main.js",
    "**/*.ts",
    "**/*.js"
  ]
}
